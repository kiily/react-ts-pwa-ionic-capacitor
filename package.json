{
  "name": "react-ts-pwa-capacitor-ionic",
  "description": "A template for a react PWA built with CRA, Ionic and Capacitor, with a complete and custom CI/CD workflow around it (w/ yarn)",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/kiily/react-ts-pwa-ionic-capacitor"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:cap": "yarn build && npx cap copy && npx cap open",
    "test": "react-scripts test",
    "test:ci": "cross-env CI=true react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint -c .eslintrc.json \"src/**/*.{ts,tsx}\"",
    "release": "semantic-release",
    "cap:doctor": "npx cap doctor"
  },
  "dependencies": {
    "@capacitor/android": "2.0.1",
    "@capacitor/cli": "2.0.1",
    "@capacitor/core": "2.0.1",
    "@capacitor/ios": "2.0.1",
    "@ionic/pwa-elements": "^1.5.2",
    "@ionic/react": "5.0.7",
    "@ionic/react-router": "5.0.7",
    "node-sass": "4.13.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-router": "5.1.2",
    "react-router-dom": "5.1.2",
    "typescript": "3.8.3"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@semantic-release/git": "9.0.0",
    "@testing-library/jest-dom": "5.5.0",
    "@testing-library/react": "10.0.2",
    "@testing-library/user-event": "10.0.1",
    "@types/jest": "25.2.1",
    "@types/node": "13.11.1",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.6",
    "@types/react-router-dom": "5.1.3",
    "commitizen": "4.0.4",
    "cross-env": "7.0.2",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-config-react": "1.1.7",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.5",
    "lint-staged": "10.1.3",
    "prettier": "2.0.4",
    "react-scripts": "3.4.1",
    "semantic-release": "17.0.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
